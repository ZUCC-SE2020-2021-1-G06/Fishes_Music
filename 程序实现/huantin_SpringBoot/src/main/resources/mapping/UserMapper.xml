<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.g06.springboot.mapper.UserMapper">
	<resultMap id="BaseResultMap" type="com.g06.springboot.entity.User">
		<result column="username" jdbcType="VARCHAR" property="username"/>
		<result column="password" jdbcType="VARCHAR" property="password"/>
	</resultMap>

	<select id="checkReg" resultType="int">
		select count(*) from useraccount where username = #{username}
	</select>

	<select id="login" resultType="com.g06.springboot.entity.User">
		select * from useraccount where username = #{username} and password = #{password}
	</select>

	<insert id="register" >
		insert into useraccount(username,password) values (#{username},#{password})
	</insert>

	<select id="searchUser" resultType="int">
		select userId from useraccount where username = #{username}
	</select>

</mapper>