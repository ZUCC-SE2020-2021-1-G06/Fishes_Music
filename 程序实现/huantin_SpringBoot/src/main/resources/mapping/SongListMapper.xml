<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.g06.springboot.mapper.SongListMapper">
	<resultMap id="BaseResultMap" type="com.g06.springboot.entity.SongList">
		<result column="songListId" jdbcType="INTEGER" property="songListId"/>
		<result column="userId" jdbcType="INTEGER" property="userId"/>
		<result column="songListName" jdbcType="VARCHAR" property="songListName"/>
		<result column="songListProfile" jdbcType="VARCHAR" property="songListProfile"/>
		<result column="songListAvatar" jdbcType="VARCHAR" property="songListAvatar"/>
	</resultMap>

	<select id="checkList" resultType="com.g06.springboot.entity.SongList">
		select * from songList where userId = #{userId} and songlistName = #{songListName}
	</select>

	<insert id="addList" >
		insert into songList(userId,songListName,songListProfile) values (#{userId},#{songListName},#{songListProfile})
	</insert>

	<delete id="removeList">
		delete from songList where userId = #{userId} and songListName = #{songListName}
	</delete>

	<update id="modifyList">
		update songList set songListName = #{songListName}, songListProfile = #{songListProfile}, songListAvatar =  #{songListAvatar} where userId = #{userId} and songListName = #{songListName}
	</update>




</mapper>